.page {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
  .container {
    background-color: #f5f5f5;
    /* background-color: white; */
  }
  .scroll-container {
    flex: 1;
    overflow-y: auto;
  }
  
  .full-canvas {
    width: 100%;
  }
  
  .btn-group {
    padding: 20rpx 30rpx;
    background: #ffffff;
    box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
    display: flex;
    flex-wrap: wrap;
    gap: 10rpx;
    justify-content: space-between;
    align-items: center;
  }
  .control-item {
    flex: 1 1 45%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
  }
  /* 按钮样式 */
button {
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    border-radius: 16rpx;
    margin-top: 20rpx;
  }
  
  .btn-primary {
    background-color: #1989fa;
    color: #ffffff;
  }
  /* 加入样式中隐藏这个按钮 */
.hidden-btn {
    display: none;
  }
  
  .btn-default {
    background-color: #f2f3f5;
    color: #333;
  }