.custom-navbar {
    height: 88rpx;
    padding-top: 100rpx; /* 适配状态栏高度 */
    display: flex;
    justify-content: center;
    align-items: center;
    /* background-color: transparent; */
    background-image: linear-gradient(135deg, #acc5a1, #e4e732);
  }
  
  .gradient-title {
    font-size: 36rpx;
    font-weight: bold;
    background: linear-gradient(135deg, #061c30, #00f2fe);
    -webkit-background-clip: text;
    color: transparent;
  }