.custom-navbar {
    height: 88rpx;
    padding-top: 100rpx; 
    display: flex;
    justify-content: center;
    align-items: center;
    
    background-image: linear-gradient(125deg, #d3ddcf, #e4e4ca);
    
  }
  
  .gradient-title {
    font-size: 36rpx;
    font-weight: bold;
    background: linear-gradient(135deg, #061c30, #00f2fe);
    -webkit-background-clip: text;
    color: transparent;
  }