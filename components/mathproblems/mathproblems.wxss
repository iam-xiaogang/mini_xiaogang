.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  .scroll-container {
    flex: 1;
    padding: 20rpx;
    box-sizing: border-box;
    overflow: auto;
  }
  
  .problem-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .problem-item {
    background: #ffffff;
    border-radius: 12rpx;
    padding: 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    font-size: 30rpx;
  }
  
  .answer {
    margin-top: 10rpx;
    color: #888;
    font-size: 28rpx;
  }
  
  .btn-group {
    padding: 20rpx;
    background: #f5f5f5;
    box-shadow: 0 -4rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  