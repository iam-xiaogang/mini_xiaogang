.setting-page {
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  .setting-group {
    margin-top: 20rpx;
    background-color: #ffffff;
    border-radius: 12rpx;
    overflow: hidden;
  }
  
  .setting-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .setting-item:last-child {
    border-bottom: none;
  }
  
  .setting-title {
    font-size: 32rpx;
    color: #333;
  }
  
  .arrow-icon {
    width: 28rpx;
    height: 28rpx;
  }
  
  .logout-item {
    justify-content: center;
  }
  
  .logout-text {
    color: red;
    font-size: 32rpx;
  }
  