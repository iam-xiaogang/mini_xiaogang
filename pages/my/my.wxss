.container {
    padding: 10px;
  }
  
  .panel {
    background-color: #f5f5f5; /* 浅灰色背景 */
    padding: 20px;
    border-radius: 10px;
    display: flex;
    align-items: center;
  }
  
  .user-info {
    display: flex;
    align-items: center;
  }
  
  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .info {
    display: flex;
    flex-direction: column; /* 垂直排列 */
    justify-content: center;
    margin-left: 20rpx;
  }
  
  .name {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  .buttons {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 15rpx;
  }
  
  .login-btn {
    width: 100%;
  }
  .address {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 8rpx;
  }
  
  .phone {
    font-size: 28rpx;
    color: #999;
  }
  
  
  .name {
    font-size: 18px;
    font-weight: bold;
  }
  
  .address,
  .phone {
    font-size: 14px;
    color: #888;
  }
  .login-btn-wrapper {
    padding: 30rpx;
  }
  .setting-icon {
    margin-left: auto;
    font-size: 24px;
    color: #888;
  }
  
  .cell-list {
    margin-top: 20px;
  }
  
  .fab {
    position: fixed;
    bottom: 40rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;



    border-radius: 50%;
    background-color: #acafb3;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }
  .fab-icon {
    width: 100rpx;
    height: 100rpx;
    padding: 0;
    border-radius: 50%;
    background-color: #7e8083;
    box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
  }


.fab-image {
    width: 50rpx;
    height: 50rpx;
  }