.container {
    display: flex;
    flex-direction: column;
  }
  .grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .fab {
    position: fixed;
    bottom: 40rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: #acafb3;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }
  
  .fab-icon {
    width: 60rpx;
    height: 60rpx;
  }
  
  .grid-item {
    width: 48%;
    margin-bottom: 16rpx;
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  }
  
  .item-image {
    width: 100%;
    height: 200rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .item-content {
    padding: 8rpx 12rpx;
    font-size: 28rpx;
    font-weight: bold;
  }
  
  .author-info {
    display: flex;
    align-items: center;
    padding: 8rpx 12rpx 12rpx;
    font-size: 24rpx;
    color: #666;
  }
  
  .avatar {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 8rpx;
  }
  
  .author-name {
    margin-right: auto;
  }
  
  .view-count {
    font-size: 22rpx;
    color: #999;
  }
  
  .grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  
  .grid-item {
    width: 48%;
    margin-bottom: 10px;
  }
  
  .item-image {
    width: 100%;
    height: 200px;
  }
  
  .item-content {
    padding: 10px;
    background-color: #fff;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }
  
  .loading, .no-more {
    text-align: center;
    padding: 20px;
    /* background-color: #f3f1f1; */
    font-size: 16px;
  }
  