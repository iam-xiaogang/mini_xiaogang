.container {
    padding: 30rpx;
    font-size: 28rpx;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .views {
    color: #888;
    margin-bottom: 30rpx;
  }
  
  rich-text {
    line-height: 1.8;
  }

  .article-detail {
    padding: 16rpx;
  }
  
  .cover {
    width: 100%;
    height: 400rpx;
    border-radius: 12rpx;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    margin: 20rpx 0;
  }
  
  .author {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 16rpx;
  }
  
  .name {
    font-size: 28rpx;
  }
  
  .actions {
    display: flex;
    justify-content: space-around;
    margin: 24rpx 0;
  }
  
  .btn {
    background-color: #f5f5f5;
    padding: 16rpx;
    border-radius: 8rpx;
  }
  
  .comments {
    border-top: 1px solid #eee;
    margin-top: 30rpx;
    padding-top: 20rpx;
  }
  
  .comment {
    padding: 10rpx 0;
    margin-top: 10rpx;
  }
  
  .comment-author {
    font-weight: bold;
  }
  
