  .rich-container {
    max-width: 100%;
    overflow-x: hidden;
    word-break: break-word;
  }
  
  /* 针对 rich-text 内部图片等宽度溢出元素的处理 */
  rich-text image {
    max-width: 100% !important;
    height: auto !important;
    display: block;
  }
  
  rich-text pre {
    white-space: pre-wrap !important;
    word-break: break-word !important;
    overflow: auto;
  }
  
  rich-text p {
    word-break: break-word;
  }
  
  .comment-input {
    display: flex;
    align-items: center;  /* 垂直居中对齐 */
    justify-content: space-between;  /* 在输入框和按钮之间留有空间 */
  }
  
  .submit-btn {
    margin-left: 10px; /* 给按钮添加一点左边距 */
  }
  .comments{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20rpx;
    background-color: #fff;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
    z-index: 999;
  }
  .comment {
    display: flex;
    margin-bottom: 15px;
    padding: 10px;
    border-bottom: 1px solid #ddd;
  }
  
  .comment-avatar {
    margin-right: 10px;
  }
  
  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
  }
  
  .comment-details {
    flex: 1;
  }
  
  .comment-author {
    font-weight: bold;
    margin-bottom: 5px;
  }
  
  .comment-content {
    font-size: 14px;
    margin-bottom: 5px;
  }
  
  .comment-time {
    font-size: 12px;
    color: #999;
    
  }
  