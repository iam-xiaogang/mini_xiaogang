.container {
    /* background-color: #f5f5f5; */
    background-image: linear-gradient(125deg, #d3ddcf, #e4e4ca);
    min-height: 100vh;
  }
  custom-navbar{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
  }
  .banner {
    height: 300rpx;
    margin-top: 190rpx;
  }
  
  .banner-image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
  }
  
  .notice {
    margin: 20rpx 0;
  }
  
  .module {
    margin: 20rpx;
    background-color: rgba(255, 255, 255, 0.5); /* 半透明白色 */
    border-radius: 20rpx;
    padding: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(15px); /* 背景模糊 */
    -webkit-backdrop-filter: blur(10px); /* Safari 兼容 */
    border: 1rpx solid rgba(255, 255, 255, 0.3); /* 轻微边框增强层次感 */
  }
  
  
  .module-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    border-left: 8rpx solid #007aff;
    padding-left: 20rpx;
  }
  
  .custom-navbar {
    height: 88rpx;
    padding-top: 100rpx; /* 适配状态栏高度 */
    display: flex;
    justify-content: center;
    align-items: center;
    /* background-color: transparent; */
    background-image: linear-gradient(135deg, #acc5a1, #e4e732);
  }
  
  .gradient-title {
    font-size: 36rpx;
    font-weight: bold;
    background: linear-gradient(135deg, #061c30, #00f2fe);
    -webkit-background-clip: text;
    color: transparent;
  }
  