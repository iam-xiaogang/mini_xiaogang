.container {
    padding: 20rpx;
  }
  
  /* 折叠面板 */
  .collapse-item {
    margin-bottom: 24rpx;
    border-radius: 20rpx;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(20rpx);
    -webkit-backdrop-filter: blur(20rpx);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  
  /* 标题栏 */
  .collapse-header {
    font-size: 32rpx;
    font-weight: bold;
    padding: 24rpx;
    color: #333;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(255, 255, 255, 0.3);
  }
  
  /* 折叠内容 */
  .collapse-body {
    padding: 16rpx 24rpx;
  }
  
  /* 文章项 */
  .article-item {
    padding: 20rpx 0;
    border-bottom: 1rpx solid rgba(200, 200, 200, 0.2);
  }
  
  .article-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
    color: #222;
  }
  
  .article-summary {
    font-size: 26rpx;
    color: #555;
    margin-bottom: 6rpx;
  }
  
  .article-info {
    font-size: 24rpx;
    color: #888;
  }
  
  /* 箭头 */
  .arrow {
    font-size: 28rpx;
    color: #888;
  }
  