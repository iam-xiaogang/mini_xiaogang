/* 页面背景与结构 */
page {
    height: 100vh;
    overflow: hidden;
    background-image: linear-gradient(125deg, #d3ddcf, #e4e4ca);
    display: flex;
    flex-direction: column;
  }
  
  /* 顶部导航栏 */
  custom-navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
  }
  
  /* 主体容器高度扣除 navbar（自定义导航栏高度为 100rpx 可调整） */
  .tree-select-container {
    display: flex;
    height: calc(100vh - 100rpx);
    margin-top: 190rpx;
  }
  
  /* 左侧栏滚动独立 */
  .sidebar {
    width: 25%;
    overflow-y: scroll;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(20rpx);
    -webkit-backdrop-filter: blur(20rpx);
    border-right: 1rpx solid rgba(0, 0, 0, 0.05);
    box-shadow: 4rpx 0 12rpx rgba(0, 0, 0, 0.05);
  }
  
  /* 分类项 */
  .sidebar-item {
    padding: 28rpx 16rpx;
    font-size: 30rpx;
    color: #444;
    text-align: center;
    border-left: 8rpx solid transparent;
    transition: all 0.3s ease;
  }
  
  .sidebar-item.active {
    color: #1989fa;
    font-weight: bold;
    border-left: 8rpx solid #1989fa;
    background: rgba(255, 255, 255, 0.6);
  }
  
  /* 右侧文章内容区域滚动 */
  .content {
    flex: 1;
    padding: 32rpx 24rpx;
    overflow-y: scroll;
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(10rpx);
    -webkit-backdrop-filter: blur(10rpx);
  }
  
  /* 文章项样式 */
  .article-item {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10rpx);
    border-radius: 20rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  }
  
  .article-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
    color: #222;
  }
  
  .article-summary {
    font-size: 28rpx;
    color: #555;
    margin-bottom: 10rpx;
  }
  
  .article-info {
    font-size: 24rpx;
    color: #999;
  }
  
  .empty {
    text-align: center;
    font-size: 28rpx;
    color: #aaa;
    padding: 80rpx 0;
  }

  .modal-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
  }
  
  .modal {
    width: 80%;
    background-color: #fff;
    border-radius: 20rpx;
    padding: 40rpx;
    box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  }
  
  .modal-title {
    font-size: 32rpx;
    margin-bottom: 24rpx;
    text-align: center;
  }
  
  .password-input {
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
    padding: 16rpx;
    font-size: 28rpx;
    width: 100%;
    margin-bottom: 32rpx;
  }
  
  .modal-actions {
    display: flex;
    justify-content: space-between;
  }
  