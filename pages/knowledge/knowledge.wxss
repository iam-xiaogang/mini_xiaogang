.page-container {
    padding: 20rpx;
  }
  
  .article-item {
    padding: 16rpx;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .article-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .article-summary {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 6rpx;
  }
  
  .article-info {
    font-size: 24rpx;
    color: #999;
  }

  /* index.wxss */
.skeleton {
    padding: 20rpx;
  }
  .skeleton-header {
    width: 100%;
    height: 80rpx;
    background: #f2f2f2;
    margin-bottom: 20rpx;
    border-radius: 8rpx;
  }
  .skeleton-line {
    width: 100%;
    height: 40rpx;
    background: #f2f2f2;
    margin-bottom: 20rpx;
    border-radius: 4rpx;
  }
  