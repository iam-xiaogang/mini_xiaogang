<custom-navbar title="我的笔记" />

<view class="container">
  <block wx:for="{{ categories }}" wx:key="id">
    <view class="collapse-item">
      <!-- 分类标题 -->
      <view class="collapse-header" bindtap="toggleCollapse" data-id="{{ item.id }}">
        {{ item.name }}
        <text class="arrow">{{ activeId === item.id ? '▲' : '▼' }}</text>
      </view>

      <!-- 展开内容 -->
      <view wx:if="{{ activeId === item.id }}" class="collapse-body">
        <block wx:for="{{ item.articles }}" wx:key="id" wx:for-item="article">
          <view class="article-item" bindtap="goToDetail" data-id="{{ article.id }}">
            <view class="article-title">{{ article.title }}</view>
            <view class="article-summary">{{ article.summary }}</view>
            <view class="article-info">
              <text>作者：{{ article.author_name }}</text>
              <text> · 浏览：{{ article.vc }}</text>
            </view>
          </view>
        </block>
      </view>
    </view>
  </block>
</view>

