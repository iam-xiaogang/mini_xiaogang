/* simple wxss */
.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .file-list {
    margin-top: 30rpx;
  }
  
  .file-item {
    padding: 20rpx;
    border-bottom: 1px solid #eee;
    color: #333;
  }


  
  .modal-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 999;
  }
  
  .modal-content {
    position: fixed;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: white;
    border-radius: 20rpx;
    padding: 40rpx;
    width: 80%;
    z-index: 1000;
  }
  
  .modal-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .modal-text {
    font-size: 28rpx;
    margin-bottom: 30rpx;
  }
  
  .contact-button {
    background-color: #07c160;
    color: white;
    font-size: 30rpx;
    border-radius: 12rpx;
  }
  .modal-mask {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 99;
  }
  
  .modal-content {
    position: fixed;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    padding: 40rpx;
    border-radius: 20rpx;
    text-align: center;
    z-index: 100;
    width: 80%;
  }
  
  .modal-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }.pdf-word-wrapper {
    padding: 20rpx;
    min-height: 100vh;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .tips {
    background-color: #fffbe6;
    border: 1px solid #ffe58f;
    padding: 20rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: #d48806;
    margin-bottom: 30rpx;
  }
  
  .file-list {
    flex: 1;
    margin-bottom: 40rpx;
  }
  
  .file-item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background-color: #f5f5f5;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
  }
  
  .file-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
  }
  
  .file-name {
    font-size: 30rpx;
    color: #333;
    word-break: break-all;
  }
  
  .bottom-btn {
    margin-top: auto;
  }
  
  